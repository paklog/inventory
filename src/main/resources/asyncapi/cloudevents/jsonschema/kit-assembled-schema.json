{
  "$id": "https://paklog.com/schemas/inventory/v1/kit-assembled.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kit Assembled Event",
  "description": "Published when kits are assembled from component SKUs",
  "type": "object",
  "required": ["assembly_order_id", "kit_sku", "kit_quantity_planned", "kit_quantity_produced", "components_consumed", "assembly_location", "completed_by"],
  "properties": {
    "assembly_order_id": {
      "type": "string",
      "description": "Unique identifier for the assembly order",
      "example": "ASM-2024-001"
    },
    "kit_sku": {
      "type": "string",
      "description": "Kit SKU being assembled",
      "example": "KIT-LAPTOP-001"
    },
    "kit_quantity_planned": {
      "type": "integer",
      "description": "Planned quantity to assemble",
      "minimum": 1,
      "example": 10
    },
    "kit_quantity_produced": {
      "type": "integer",
      "description": "Actual quantity produced",
      "minimum": 0,
      "example": 9
    },
    "components_consumed": {
      "type": "object",
      "description": "Map of component SKUs to quantities consumed",
      "additionalProperties": {
        "type": "integer"
      },
      "example": {
        "SKU-SCREEN": 9,
        "SKU-KEYBOARD": 9,
        "SKU-MOTHERBOARD": 9
      }
    },
    "assembly_location": {
      "type": "string",
      "description": "Location where assembly occurred",
      "example": "WH01-ASSEMBLY-01-01-A"
    },
    "completed_by": {
      "type": "string",
      "description": "User who completed the assembly",
      "example": "assembly.operator@paklog.com"
    }
  }
}
