{
  "$id": "https://paklog.com/schemas/inventory/v1/kit-created.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kit Created Event",
  "description": "Published when a new kit definition is created in the system",
  "type": "object",
  "required": ["kit_sku", "kit_name", "kit_type", "components", "created_by"],
  "properties": {
    "kit_sku": {
      "type": "string",
      "description": "Unique SKU for the kit",
      "example": "KIT-LAPTOP-001"
    },
    "kit_name": {
      "type": "string",
      "description": "Descriptive name of the kit",
      "example": "Standard Laptop Bundle"
    },
    "kit_type": {
      "type": "string",
      "description": "Type of kit",
      "enum": ["PHYSICAL", "VIRTUAL", "CONFIGURABLE"],
      "example": "PHYSICAL"
    },
    "components": {
      "type": "array",
      "description": "List of component SKUs and quantities",
      "items": {
        "type": "object",
        "required": ["component_sku", "quantity"],
        "properties": {
          "component_sku": {
            "type": "string",
            "example": "SKU-SCREEN"
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "example": 1
          },
          "is_optional": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "created_by": {
      "type": "string",
      "description": "User who created the kit",
      "example": "product.manager@paklog.com"
    }
  }
}
