{
  "$id": "https://paklog.com/schemas/inventory/v1/stock-transfer-initiated.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stock Transfer Initiated Event",
  "description": "Published when a stock transfer between locations is initiated",
  "type": "object",
  "required": ["transfer_id", "sku", "source_location", "destination_location", "quantity", "initiated_by", "reason"],
  "properties": {
    "transfer_id": {
      "type": "string",
      "description": "Unique identifier for the transfer",
      "example": "XFER-2024-001"
    },
    "sku": {
      "type": "string",
      "description": "Stock Keeping Unit identifier",
      "example": "SKU-12345"
    },
    "source_location": {
      "type": "string",
      "description": "Source location code",
      "example": "WH01-A-01-01-A"
    },
    "destination_location": {
      "type": "string",
      "description": "Destination location code",
      "example": "WH01-B-02-03-B"
    },
    "quantity": {
      "type": "integer",
      "description": "Quantity to transfer",
      "minimum": 1,
      "example": 100
    },
    "initiated_by": {
      "type": "string",
      "description": "User who initiated the transfer",
      "example": "warehouse.operator@paklog.com"
    },
    "reason": {
      "type": "string",
      "description": "Reason for transfer",
      "example": "Replenishment to pick face"
    }
  }
}
